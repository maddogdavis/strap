#!/bin/bash -euf

. _strap_inc

check_args $# 0 "no-args"

work="${HOME}/work"
tmp="${HOME}/tmp"

date=`date '+%Y%m%d_%H%M'`
git_rescue="${tmp}/git_rescue_${date}"
git_reload="${tmp}/git_reload_${date}"

check_file d y ${work}
check_file d y ${tmp}
check_file d n ${git_rescue}
check_file d n ${git_reload}

mkdir "${git_reload}"
echo "attempting reload into ${git_reload}..."

for i in `ls ${work}`
do
  git_repo_url ${work}/${i} && url=${__}
  git_clone ${url} ${git_reload}
done

echo "WHOA!!!"
exit 1



id=$1
script="/var/log/script/script_${id}"

check_file f y ${script}
tail -f ${script}
